#!/bin/sh

dir="$(pwd)"
bin="$0"
while [ -L "${bin}" ]
do
    x="$(readlink "${bin}")"
    cd "$(dirname "${bin}")"
    bin="${x}"
done
cd "$(dirname "${bin}")"
cd ..
home="$(pwd)"
cd "${dir}"

if [ ! -z "${ARC_DEBUG}" ]
then
  exec racket -l errortrace -t "${home}/as.scm" "$@"
else
  exec racket -t "${home}/as.scm" "$@"
fi
